				@Html.TextBox( "Email", new { @class = "form-control" } )
			</div>
		</div>

		<div class="form-group">
			@Html.Label( "Phone Number", htmlAttributes: new { @class = "control-label col-md-2" } )
			<div class="col-md-10">
